<link href="~/Content/css/datepicker.css" rel="stylesheet" />

<div id="ListOfOrders" class="container-fluid">
    <div class="panel panel-default">
        <div id="SeccDivtbOrdersList" class="panel-tabs panel-default">
            <div class="tab-pane fade active in" @*class="tab-pane active"*@>
                <h5>Listado de Pedidos pendientes de conirmación  </h5>
            </div>

            <div class="panel panel-body">
                <div class="panel panel-default" style="padding:5px 15px;">
                    <table id="divtbOrdersList" cclass="table table-striped table-hover">
                        <thead class="claro-bg-primary">
                            <tr>
                                <th style="text-align: center; width: inherit;">Nro Orden</th>
                                <th style="text-align: center; width: inherit;">Fecha</th>
                                <th style="text-align: center; width: inherit;">Nombre/Razon Social</th>
                                <th style="text-align: center; width: inherit;">Telefono</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="SeccDivtbProductsOrdersList" class="panel-tabs panel-default">
            <div class="tab-pane fade active in" @*class="tab-pane active"*@>
                <h5>Confirmacion de Pedido</h5>
                <div class="panel panel-body">
                    <div class="panel panel-default" style="padding:5px 15px;">
                        <form>
                            <div class="row">
                                <div class="col-sm-4">
                                    <label class="col-form-label">Pedido</label>
                                    <label class="col-form-label" id="lblNroOrder"></label>
                                    <label>-</label>
                                    <label class="col-form-label" id="lblContactName"></label>
                                </div>
                            </div>

                            <div>
                                <table id="divtbProductsOrdersList" cclass="table table-striped table-hover" style="width:50%">
                                    <thead class="claro-bg-primary">
                                        <tr>
                                            <th style="text-align: center; width: inherit;">Código</th>
                                            <th style="text-align: center; width: inherit;">Descripción</th>
                                            <th style="text-align: center; width: inherit;">Cantidad</th>
                                            <th style="text-align: center; width: inherit;">Precio</th>
                                            <th style="text-align: center; width: inherit;">Total</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div id="datePicker" class="input-group date">
                                            <input type="text" class="form-control" id="txtDateConfirmation" />
                                            <label id="calendarDate" class="btn northwind-button input-group-addon" for="txtDateConfirmation">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <input id="chkConfirm" type="checkbox" style="cursor: pointer" value="Marcado" /><label class="col-form-label" style="padding-left:15px; padding:10px">Confirmado:</label>
                                    </div>
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-2">
                                        <label class="col-form-label" style="padding:10px; padding-left:100px;">Total:</label>
                                    </div>
                                    <!--<div class="col-sm-2"></div>-->
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="txtTotal" />
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="row">
                                        <div class="col-sm-1">
                                            <label class="col-form-label">Comentario:</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <textarea style="margin: 0px; width: 435px; height: 125px;" class="form-control" id="txtCommentary"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div id="content" class="panel-body">
                            <div class="">
                                <center>
                                    <div class="card">
                                        <div class="card-header" style="cursor: pointer">
                                            <button style="padding-left: 35px; padding-right: 35px; margin: 5px; width:150px; height: 30px; border-radius: 5px" class="btn claro-btn-info btn-sm" id="btnSave" type="button"><i class="glyphicon glyphicon-floppy-saved"></i>  Guardar</button>
                                        </div>
                                    </div>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/ListOfOrders/ListOfOrders.js"></script>

